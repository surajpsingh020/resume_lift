# Backend Dockerfile for Development
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Install nodemon globally
RUN npm install -g nodemon

# Copy source code
COPY . .

# Expose port
EXPOSE 5001

# Start with nodemon for hot-reload
CMD ["npm", "run", "dev"]
